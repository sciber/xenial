<TagsMenuItem@Button>:
    title: 'Tag'
    num_categories: '0'
    num_articles: '0'
    size_hint_y: None
    height: '60dp'
    background_normal: ''
    background_color: 0, .7, .7, 1
    padding: '20dp', '20dp'
    on_release: app.root.ids.manager.current = 'tag'
    BoxLayout:
        orientation: 'horizontal'
        pos: self.parent.pos[0] + dp(8), self.parent.pos[1]
        size_hint: None, None
        size: self.parent.size[0] - dp(8), self.parent.size[1]
        Label:
            text: root.title
            font_size: '18dp'
            text_size: self.size
            valign: 'middle'
            color: 1, 1, 1, 1
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'bottom'
            size_hint_x: None
            width: self.height
            padding: '4dp'
            Image:
                pos: self.parent.pos
                source: 'assets/img/article.png'
                size_hint_x: None
                width: self.height
                color: 1, 1, 1, .5
            Label:
                size_hint: .5, .5
                text: root.num_articles
                font_size: '12dp'
                bold: True
                color: .2, .2, .2, 1
                canvas.before:
                    Color:
                        rgba: .7, .7, .7, 1
                    Ellipse:
                        pos: self.pos
                        size: self.size
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'bottom'
            size_hint_x: None
            width: self.height
            padding: '4dp'
            Image:
                source: 'assets/img/category.png'
                size_hint_x: None
                width: self.height
                color: 1, 1, 1, .5
            Label:
                size_hint: .5, .5
                text: root.num_categories
                font_size: '12dp'
                bold: True
                color: .2, .2, .2, 1
                canvas.before:
                    Color:
                        rgba: .7, .7, .7, 1
                    Ellipse:
                        pos: self.pos
                        size: self.size

