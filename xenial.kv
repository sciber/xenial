#:kivy 1.11.1

<NavigationPanelButton@Button>:
    color: .2, .2, .2, 1
    font_size: '20dp'
    background_normal: ''

<NavigationPanel@BoxLayout>:
    orientation: 'vertical'
    padding: '4dp'
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    NavigationPanelButton:
        text: 'Search'
        on_release:
            app.root.ids.manager.current = 'search'
            app.root.toggle_state()
    NavigationPanelButton:
        text: 'Categories'
        on_release:
            app.root.ids.manager.current = 'categories'
            app.root.toggle_state()
    NavigationPanelButton:
        text: 'Tags'
        on_release:
            app.root.ids.manager.current = 'tags'
            app.root.toggle_state()
    NavigationPanelButton:
        text: 'Articles'
        on_release:
            app.root.ids.manager.current = 'articles'
            app.root.toggle_state()
    NavigationPanelButton:
        text: 'Bookmarks'
        on_release:
            app.root.ids.manager.current = 'bookmarks'
            app.root.toggle_state()
    NavigationPanelButton:
        text: 'Guides'
        on_release:
            app.root.ids.manager.current = 'guides'
            app.root.toggle_state()

<TitleBar@BoxLayout>:
    orientation: 'horizontal'
    size_hint_y: None
    height: '50dp'
    title: 'No title'
    Button:
        size_hint_x: None
        width: self.height
        background_normal: ''
        on_release: app.root.toggle_state()
        Image:
            source: 'assets/img/hamburger_menu.png'
            pos: self.parent.pos
            size: self.parent.size
            allow_stretch: True
    Label:
        text: self.parent.title
        color: .2, .2, .2, 1
        font_size: '20dp'
    Button:
        size_hint_x: None
        width: self.height
        background_normal: ''
        background_disabled_normal: ''
        disabled: True
        Image:
            source: 'assets/img/bookmark_disabled.png'
            pos: self.parent.pos
            size: self.parent.size
            allow_stretch: True

<CategoriesMenuItem@Button>:
    title: 'Category'
    background_normal: ''
    size_hint_y: None
    height: '160dp'
    on_release: app.root.ids.manager.current = 'category'
    BoxLayout:
        orientation: 'vertical'
        pos: self.parent.pos
        size_hint: None, None
        size: self.parent.size
        Image:
            source: 'assets/img/category.png'
            size_hint_y: .6
        Label:
            text: root.title
            color: .2, .2, .2, 1
            font_size: '16dp'
            size_hint_y: .4
            text_size: self.size
            halign: 'center'
            valign: 'top'

<CategoriesMenuScreen@Screen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        TitleBar:
            title: 'Categories'
        ScrollView:
            GridLayout:
                cols: 3
                size_hint_y: None
                height: self.minimum_height
                CategoriesMenuItem:
                    title: 'Category 1'
                CategoriesMenuItem:
                    title: 'Category 2'
                CategoriesMenuItem:
                    title: 'Category 3'
                CategoriesMenuItem:
                    title: 'Category 4'
                CategoriesMenuItem:
                    title: 'Category 5'
                CategoriesMenuItem:
                    title: 'Category 6'
                CategoriesMenuItem:
                    title: 'Category 7'
                CategoriesMenuItem:
                    title: 'Category 8'
                CategoriesMenuItem:
                    title: 'Category 9'
                CategoriesMenuItem:
                    title: 'Category 10'
                CategoriesMenuItem:
                    title: 'Category 11'
                CategoriesMenuItem:
                    title: 'Category 12'

<CategoryTagButton@Button>:
    text: 'Tag'
    size_hint: None, None
    size: self.texture_size
    padding: '8dp', '4dp'
    on_release: app.root.ids.manager.current = 'tag'

<CategoryTagsLayout@StackLayout>:
    size_hint_y: None
    height: self.minimum_height
    spacing: '2dp'
    CategoryTagButton:
        text: 'First tag'
    CategoryTagButton:
        text: 'Second tag'
    CategoryTagButton:
        text: 'Third tag'
    CategoryTagButton:
        text: 'Fourth tag'
    CategoryTagButton:
        text: 'Fifth tag'

<CategoryArticlesMenuItem@Button>:
    title: 'Article'
    synopsis: 'Article synopsis'
    size_hint_y: None
    height: '80dp'
    background_normal: ''
    on_release: app.root.ids.manager.current = 'article'
    BoxLayout:
        orientation: 'horizontal'
        pos: self.parent.pos
        size_hint: None, None
        size: self.parent.size
        Image:
            source: 'assets/img/article.png'
            size_hint_x: None
            width: self.height
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: root.title
                color: .2, .2, .2, 1
                font_size: '16dp'
                size_hint_y: .4
                text_size: self.size
                halign: 'left'
                valign: 'middle'
            Label:
                text: root.synopsis
                color: .4, .4, .4, 1
                font_size: '14dp'
                size_hint_y: .6
                text_size: self.size
                halign: 'left'
                valign: 'top'

<CategoryArticlesMenuScreen@Screen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        spacing: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        TitleBar:
            title: 'Category'
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: '6dp'
                Label:
                    text: 'Category title'
                    font_size: '24dp'
                    bold: True
                    color: .2, .2, .2, 1
                    size_hint_y: None
                    height: '60dp'
                CategoryTagsLayout
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    CategoryArticlesMenuItem:
                        title: 'Article 1 title'
                        synopsis: 'Article 1 synopsis can span over two rows'
                    CategoryArticlesMenuItem:
                        title: 'Article 2 title'
                        synopsis: 'Article 2 synopsis can span over two rows'
                    CategoryArticlesMenuItem:
                        title: 'Article 3 title'
                        synopsis: 'Article 3 synopsis can span over two rows'
                    CategoryArticlesMenuItem:
                        title: 'Article 4 title'
                        synopsis: 'Article 4 synopsis can span over two rows'
                    CategoryArticlesMenuItem:
                        title: 'Article 5 title'
                        synopsis: 'Article 5 synopsis can span over two rows'
                    CategoryArticlesMenuItem:
                        title: 'Article 6 title'
                        synopsis: 'Article 6 synopsis can span over two rows'
                    CategoryArticlesMenuItem:
                        title: 'Article 7 title'
                        synopsis: 'Article 7 synopsis can span over two rows'
                    CategoryArticlesMenuItem:
                        title: 'Article 8 title'
                        synopsis: 'Article 8 synopsis can span over two rows'

<TagsMenuItem@Button>:
    title: 'Tag'
    size_hint_y: None
    height: '60dp'
    background_normal: ''
    padding: '20dp', '20dp'
    on_release: app.root.ids.manager.current = 'tag'
    BoxLayout:
        orientation: 'horizontal'
        pos: self.parent.pos[0] + dp(8), self.parent.pos[1]
        size_hint: None, None
        size: self.parent.size[0] - dp(8), self.parent.size[1]
        Label:
            text: root.title
            font_size: '18dp'
            text_size: self.size
            valign: 'middle'
            color: .2, .2, .2, 1

