#:kivy 1.11.1

<TaggedCategoriesMenuItem@Button>:
    icon: None
    title: 'Category'
    background_normal: ''
    size_hint_y: None
    height: '160dp'
    on_release: app.root.ids.manager.current = 'category'
    BoxLayout:
        orientation: 'vertical'
        pos: self.parent.pos
        size_hint: None, None
        size: self.parent.size
        Image:
            source: root.icon
            size_hint_y: .6
        Label:
            text: root.title
            color: .2, .2, .2, 1
            font_size: '16dp'
            size_hint_y: .4
            text_size: self.size
            halign: 'center'
            valign: 'top'

<TaggedCategoriesMenu@BoxLayout>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '40dp'
        Image:
            pos: self.parent.pos
            source: 'assets/img/category.png'
            size_hint_x: None
            width: self.height
            color: 1, 1, 1, .5
        Label:
            text: 'Tagged categories'
            font_size: '18dp'
            bold: True
            padding: '8dp', '8dp'
            text_size: self.width, self.height
            halign: 'left'
            valign: 'middle'
            color: .6, .6, .6, 1
    GridLayout:
        cols: round(root.width // 130) + 1
        size_hint_y: None
        height: self.minimum_height
        TaggedCategoriesMenuItem:
            icon: 'assets/img/category-color.png'
            title: 'Category 1'
        TaggedCategoriesMenuItem:
            icon: 'assets/img/category-color.png'
            title: 'Category 2'
        TaggedCategoriesMenuItem:
            icon: 'assets/img/category-color.png'
            title: 'Category 3'
        TaggedCategoriesMenuItem:
            icon: 'assets/img/category-color.png'
            title: 'Category 4'
        TaggedCategoriesMenuItem:
            icon: 'assets/img/category-color.png'
            title: 'Category 5'

<TaggedArticlesMenuItem@Button>:
    icon: None
    title: ''
    synopsis: ''
    size_hint_y: None
    height: '80dp'
    background_normal: ''
    on_release: app.root.ids.manager.current = 'article'
    BoxLayout:
        orientation: 'horizontal'
        pos: self.parent.pos
        size_hint: None, None
        size: self.parent.size
        Image:
            source: root.icon
            size_hint_x: None
            width: self.height
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: root.title
                color: .2, .2, .2, 1
                font_size: '16dp'
                size_hint_y: .4
                text_size: self.size
                halign: 'left'
                valign: 'middle'
            Label:
                text: root.synopsis
                color: .4, .4, .4, 1
                font_size: '14dp'
                size_hint_y: .6
                text_size: self.size
                halign: 'left'
                valign: 'top'

<TaggedArticlesMenu@BoxLayout>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    padding: 0, '8dp'
    spacing: '8dp'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '40dp'
        Image:
            pos: self.parent.pos
            source: 'assets/img/article.png'
            size_hint_x: None
            width: self.height
            color: 1, 1, 1, .5
        Label:
            text: 'Tagged articles'
            font_size: '18dp'
            bold: True
            padding: '8dp', '8dp'
            size_hint_y: None
            height: '40dp'
            text_size: self.width, self.height
            halign: 'left'
            valign: 'middle'
            color: .6, .6, .6, 1
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        TaggedArticlesMenuItem:
            icon: 'assets/img/article-color.png'
            title: 'Article 1 title'
            synopsis: 'Article 1 synopsis can span over two rows'
        TaggedArticlesMenuItem:
            icon: 'assets/img/article-color.png'
            title: 'Article 2 title'
            synopsis: 'Article 2 synopsis can span over two rows'
        TaggedArticlesMenuItem:
            icon: 'assets/img/article-color.png'
            title: 'Article 3 title'
            synopsis: 'Article 3 synopsis can span over two rows'
        TaggedArticlesMenuItem:
            icon: 'assets/img/article-color.png'
            title: 'Article 4 title'
            synopsis: 'Article 4 synopsis can span over two rows'
        TaggedArticlesMenuItem:
            icon: 'assets/img/article-color.png'
            title: 'Article 5 title'
            synopsis: 'Article 5 synopsis can span over two rows'
        TaggedArticlesMenuItem:
            icon: 'assets/img/article-color.png'
            title: 'Article 6 title'
            synopsis: 'Article 6 synopsis can span over two rows'
        TaggedArticlesMenuItem:
            icon: 'assets/img/article-color.png'
            title: 'Article 7 title'
            synopsis: 'Article 7 synopsis can span over two rows'
        TaggedArticlesMenuItem:
            icon: 'assets/img/article-color.png'
            title: 'Article 8 title'
            synopsis: 'Article 8 synopsis can span over two rows'

<TagScreen@Screen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        TitleBar:
            title: 'Tag'
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    size_hint_y: None
                    height: '100dp'
                    Label:
                        text: 'Tag name'
                        font_size: '24dp'
                        bold: True
                        size_hint: None, None
                        size: self.texture_size
                        padding: '16dp', '8dp'
                        color: 1, 1, 1, 1
                        canvas.before:
                            Color:
                                rgba: 0, .7, .7, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                TaggedCategoriesMenu
                TaggedArticlesMenu
