<TagScreen>:
    tag_name: ''
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        TitleBar:
            title: 'Tag'
        ScrollView:
            BoxLayout:
                id: container
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    size_hint_y: None
                    height: '100dp'
                    Label:
                        text: root.tag_name
                        font_size: '24dp'
                        bold: True
                        size_hint: None, None
                        size: self.texture_size
                        padding: '16dp', '8dp'
                        color: 1, 1, 1, 1
                        canvas.before:
                            Color:
                                rgba: 0, .7, .7, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
