#:kivy 1.11.1

<ArticleAssignedTag>:
    text: ''
    size_hint: None, None
    size: self.texture_size
    padding: '8dp', '4dp'
    background_normal: ''
    color: 1, 1, 1, 1
    background_color: 0, .7, .7, 1
    on_release: app.root.show_tag_screen(self.text)

<ArticleAssignedTagsList>:
    size_hint_y: None
    height: self.minimum_height
    spacing: '2dp'

<ArticleTitle@BoxLayout>:
    icon: None
    title: ''
    orientation: 'horizontal'
    size_hint_y: None
    height: '80dp'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        size_hint_x: None
        width: self.height
        padding: '8dp'
        Image:
            source: root.icon
    Label:
        text: root.title
        font_size: '24dp'
        bold: True
        text_size: self.size
        valign: 'middle'
        color: .2, .2, .2, 1

<ArticleSubtitle>:
    text: ''
    font_size: '20dp'
    bold: True
    size_hint_y: None
    height: '50dp'
    text_size: self.size
    halign: 'left'
    valign: 'middle'
    color: .2, .2, .2, 1

<ArticleParagraph>:
    text: ''
    font_size: '16dp'
    text_size: self.width, None
    size_hint_y: None
    height: self.texture_size[1]
    color: .2, .2, .2, 1
    markup: True

<ArticleImage>:
    image: None
    caption: ''
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    spacing: '8dp'
    Image:
        source: root.image
        size_hint: None, None
        width: self.parent.width - (2 * self.parent.padding[0])
        height: self.parent.width/self.image_ratio
        keep_ratio: True
        allow_stretch: True
    Label:
        text: root.caption
        font_size: '14dp'
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]
        color: .4, .4, .4, 1
        markup: True

<ArticleAudio>:
    audio: None
    caption: ''
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    spacing: '8dp'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '80dp'
        padding: '4dp'
        canvas:
            Color:
                rgba: .2, .2, .2, 1
            Line:
                width: 1
                rectangle: self.x, self.y, self.width, self.height
        Button:
            size_hint_x: None
            width: '80dp'
            background_normal: ''
            Image:
                source: 'assets/img/play-darkgray.png'
                pos: self.parent.pos
                size: self.parent.size
        BoxLayout:
            orientation: 'vertical'
            padding: '8dp'
            Slider:
                orientation: 'horizontal'
                value: 50
                step: 1
                value_track: True
                value_track_color: 0, .6, .7, 1
            Label:
                text: '00:30 / 01:00'
                text_size: self.size
                halign: 'right'
                color: .2, .2, .2, 1
    Label:
        text: root.caption
        font_size: '14dp'
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]
        color: .4, .4, .4, 1
        markup: True

<ArticleVideo>:
    image: None
    video: None
    caption: ''
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    spacing: '8dp'
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        Image:
            source: root.image
            size_hint: None, None
            width: self.parent.width - (2 * self.parent.padding[0])
            height: self.parent.width/self.image_ratio
            keep_ratio: True
            allow_stretch: True
            canvas:
                Color:
                    rgba: .2, .2, .2, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '80dp'
            padding: '4dp'
            canvas:
                Color:
                    rgba: .2, .2, .2, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            Button:
                size_hint_x: None
                width: '80dp'
                background_normal: ''
                Image:
                    source: 'assets/img/play-darkgray.png'
                    pos: self.parent.pos
                    size: self.parent.size
            BoxLayout:
                orientation: 'vertical'
                padding: '8dp'
                Slider:
                    orientation: 'horizontal'
                    value: 50
                    step: 1
                    value_track: True
                    value_track_color: 0, .6, .7, 1
                Label:
                    text: '00:30 / 01:00'
                    text_size: self.size
                    halign: 'right'
                    color: .2, .2, .2, 1
    Label:
        text: root.caption
        font_size: '14dp'
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]
        color: .4, .4, .4, 1
        markup: True

<ArticleContent>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    padding: 0, 0, 0, '10dp'
    spacing: '20dp'
