#:kivy 1.11.1

<CategoryAssignedTag>:
    text: ''
    size_hint: None, None
    size: self.texture_size
    padding: '8dp', '4dp'
    background_normal: ''
    color: 1, 1, 1, 1
    background_color: 0, .7, .7, 1
    on_release: app.root.show_tag_screen(self.text)

<CategoryAssignedTagsList>:
    size_hint_y: None
    height: self.minimum_height
    spacing: '2dp'

<CategoryArticlesMenuItem>:
    article_id: None
    icon: None
    title: ''
    synopsis: ''
    size_hint_y: None
    height: '80dp'
    background_normal: ''
    on_release: app.root.show_article_screen(self.article_id)
    BoxLayout:
        orientation: 'horizontal'
        pos: self.parent.pos
        size_hint: None, None
        size: self.parent.size
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            size_hint_x: None
            width: self.height
            Image:
                source: root.icon
                size_hint: None, None
                size: '50dp', '50dp'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: root.title
                color: .2, .2, .2, 1
                font_size: '16dp'
                size_hint_y: .4
                text_size: self.size
                halign: 'left'
                valign: 'middle'
            Label:
                text: root.synopsis
                markup: True
                color: .4, .4, .4, 1
                font_size: '14dp'
                size_hint_y: .6
                text_size: self.size
                halign: 'left'
                valign: 'top'

<CategoryArticlesMenu>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    padding: 0, '8dp'
    spacing: '8dp'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '40dp'
        Image:
            pos: self.parent.pos
            source: 'assets/img/article.png'
            size_hint_x: None
            width: self.height
            color: 1, 1, 1, .5
        Label:
            text: 'Category articles'
            font_size: '18dp'
            bold: True
            padding: '8dp', '8dp'
            size_hint_y: None
            height: '40dp'
            text_size: self.width, self.height
            halign: 'left'
            valign: 'middle'
            color: .6, .6, .6, 1


<CategoryRelatedCategoriesMenuItem>:
    icon: None
    name: ''
    background_normal: ''
    size_hint: None, None
    size: '80dp', '100dp'
    on_release: app.root.show_category_screen(self.name)
    BoxLayout:
        orientation: 'vertical'
        pos: self.parent.pos
        size_hint: None, None
        size: self.parent.size
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            size_hint_y: .6
            padding: '8dp'
            Image:
                source: root.icon
        Label:
            text: root.name
            color: .2, .2, .2, 1
            font_size: '12dp'
            size_hint_y: .4
            text_size: self.size
            halign: 'center'
            valign: 'top'

<CategoryRelatedCategoriesMenu>:
    items_container: container
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '40dp'
        Image:
            pos: self.parent.pos
            source: 'assets/img/category.png'
            size_hint_x: None
            width: self.height
            color: 1, 1, 1, .5
        Label:
            text: 'Related categories'
            font_size: '18dp'
            bold: True
            padding: '8dp', '8dp'
            text_size: self.width, self.height
            halign: 'left'
            valign: 'middle'
            color: .6, .6, .6, 1
    StackLayout:
        id: container
        size_hint_y: None
        height: self.minimum_height
        spacing: '2dp'
        padding: '6dp'

<CategoryScreen>:
    category_icon: None
    category_name: ''
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        spacing: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        TitleBar:
            title: 'Category'
        ScrollView:
            BoxLayout:
                id: container
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: '8dp'
                padding: '4dp'
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '80dp'
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'center'
                        size_hint_x: None
                        width: self.height
                        padding: '8dp'
                        Image:
                            source: root.category_icon
                    Label:
                        text: root.category_name
                        font_size: '24dp'
                        bold: True
                        text_size: self.size
                        valign: 'middle'
                        color: .2, .2, .2, 1
