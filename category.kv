#:kivy 1.11.1

<CategoryAssignedTag@Button>:
    text: ''
    size_hint: None, None
    size: self.texture_size
    padding: '8dp', '4dp'
    background_normal: ''
    color: 1, 1, 1, 1
    background_color: 0, .7, .7, 1
    on_release: app.root.ids.manager.current = 'tag'

<CategoryAssignedTagsList@StackLayout>:
    size_hint_y: None
    height: self.minimum_height
    spacing: '2dp'
    CategoryAssignedTag:
        text: 'First tag'
    CategoryAssignedTag:
        text: 'Second tag'
    CategoryAssignedTag:
        text: 'Third tag'
    CategoryAssignedTag:
        text: 'Fourth tag'
    CategoryAssignedTag:
        text: 'Fifth tag'

<CategoryArticlesMenuItem@Button>:
    icon: None
    title: ''
    synopsis: ''
    size_hint_y: None
    height: '80dp'
    background_normal: ''
    on_release: app.root.ids.manager.current = 'article'
    BoxLayout:
        orientation: 'horizontal'
        pos: self.parent.pos
        size_hint: None, None
        size: self.parent.size
        Image:
            source: root.icon
            size_hint_x: None
            width: self.height
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: root.title
                color: .2, .2, .2, 1
                font_size: '16dp'
                size_hint_y: .4
                text_size: self.size
                halign: 'left'
                valign: 'middle'
            Label:
                text: root.synopsis
                color: .4, .4, .4, 1
                font_size: '14dp'
                size_hint_y: .6
                text_size: self.size
                halign: 'left'
                valign: 'top'

<CategoryArticlesMenu@BoxLayout>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    padding: 0, '8dp'
    spacing: '8dp'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '40dp'
        Image:
            pos: self.parent.pos
            source: 'assets/img/article.png'
            size_hint_x: None
            width: self.height
            color: 1, 1, 1, .5
        Label:
            text: 'Category articles'
            font_size: '18dp'
            bold: True
            padding: '8dp', '8dp'
            size_hint_y: None
            height: '40dp'
            text_size: self.width, self.height
            halign: 'left'
            valign: 'middle'
            color: .6, .6, .6, 1
    CategoryArticlesMenuItem:
        icon: 'assets/img/article-color.png'
        title: 'Article 1 title'
        synopsis: 'Article 1 synopsis can span over two rows'
    CategoryArticlesMenuItem:
        icon: 'assets/img/article-color.png'
        title: 'Article 2 title'
        synopsis: 'Article 2 synopsis can span over two rows'
    CategoryArticlesMenuItem:
        icon: 'assets/img/article-color.png'
        title: 'Article 3 title'
        synopsis: 'Article 3 synopsis can span over two rows'
    CategoryArticlesMenuItem:
        icon: 'assets/img/article-color.png'
        title: 'Article 4 title'
        synopsis: 'Article 4 synopsis can span over two rows'
    CategoryArticlesMenuItem:
        icon: 'assets/img/article-color.png'
        title: 'Article 5 title'
        synopsis: 'Article 5 synopsis can span over two rows'
    CategoryArticlesMenuItem:
        icon: 'assets/img/article-color.png'
        title: 'Article 6 title'
        synopsis: 'Article 6 synopsis can span over two rows'
    CategoryArticlesMenuItem:
        icon: 'assets/img/article-color.png'
        title: 'Article 7 title'
        synopsis: 'Article 7 synopsis can span over two rows'
    CategoryArticlesMenuItem:
        icon: 'assets/img/article-color.png'
        title: 'Article 8 title'
        synopsis: 'Article 8 synopsis can span over two rows'

<CategoryRelatedCategoriesMenuItem@Button>:
    icon: None
    title: ''
    background_normal: ''
    size_hint: None, None
    size: '80dp', '100dp'
    on_release: app.root.ids.manager.current = 'category'
    BoxLayout:
        orientation: 'vertical'
        pos: self.parent.pos
        size_hint: None, None
        size: self.parent.size
        Image:
            source: root.icon
            size_hint_y: .6
        Label:
            text: root.title
            color: .2, .2, .2, 1
            font_size: '12dp'
            size_hint_y: .4
            text_size: self.size
            halign: 'center'
            valign: 'top'

<CategoryRelatedCategoriesMenu@BoxLayout>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '40dp'
        Image:
            pos: self.parent.pos
            source: 'assets/img/category.png'
            size_hint_x: None
            width: self.height
            color: 1, 1, 1, .5
        Label:
            text: 'Related categories'
            font_size: '18dp'
            bold: True
            padding: '8dp', '8dp'
            text_size: self.width, self.height
            halign: 'left'
            valign: 'middle'
            color: .6, .6, .6, 1
    StackLayout:
        size_hint_y: None
        height: self.minimum_height
        spacing: '2dp'
        padding: '6dp'
        CategoryRelatedCategoriesMenuItem:
            icon: 'assets/img/category-color.png'
            title: 'Category 1'
        CategoryRelatedCategoriesMenuItem:
            icon: 'assets/img/category-color.png'
            title: 'Category 2'
        CategoryRelatedCategoriesMenuItem:
            icon: 'assets/img/category-color.png'
            title: 'Category 3'
        CategoryRelatedCategoriesMenuItem:
            icon: 'assets/img/category-color.png'
            title: 'Category 4'
        CategoryRelatedCategoriesMenuItem:
            icon: 'assets/img/category-color.png'
            title: 'Category 5'

<CategoryScreen@Screen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        spacing: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        TitleBar:
            title: 'Category'
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: '8dp'
                padding: '4dp'
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '100dp'
                    Image:
                        source: 'assets/img/category-color.png'
                        size_hint_x: None
                        width: self.height
                    Label:
                        text: 'Category title'
                        font_size: '24dp'
                        bold: True
                        text_size: self.size
                        valign: 'middle'
                        color: .2, .2, .2, 1
                CategoryAssignedTagsList
                CategoryArticlesMenu
                CategoryRelatedCategoriesMenu
