#:kivy 1.11.1
#:import Factory kivy.factory.Factory
#:import getcwd os.getcwd

<LoadGuidePopup@Popup>
    auto_dismiss: False
    title: 'Select a guide file'
    title_color: 0, .7, .7, 1
    separator_color: 0, .7, .7, 1
    BoxLayout:
        orientation: 'vertical'
        FileChooserListView:
            id: filechooser
            path: getcwd()
            filters: ['*.tgz']
            dirselect: False
            multiselect: False
            color: 1, 0, 0, 1
            font_size: '24dp'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '40dp'
            Button:
                text: 'Cancel'
                on_release: root.dismiss()
            Button:
                text: 'Load'
                disabled: not filechooser.selection
                on_release:
                    root.dismiss()
                    app.root.load_guide(filechooser.selection)

<GuidesMenuItem@BoxLayout>:
    name: ''
    title: ''
    icon: None
    from_place: ''
    to_place: ''
    active: 'normal'
    orientation: 'horizontal'
    size_hint_y: None
    height: '80dp'
    Button:
        background_normal: ''
        on_release: app.root.show_guide_screen(root.name)
        BoxLayout:
            orientation: 'horizontal'
            pos: self.parent.pos
            size_hint: None, None
            size: self.parent.size
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                size_hint_x: None
                width: self.height
                Image:
                    source: root.icon
                    size_hint: None, None
                    size: '60dp', '60dp'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: root.title
                    color: .2, .2, .2, 1
                    font_size: '18dp'
                    bold: True
                    size_hint_y: .5
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                Label:
                    text: 'From {} to {}'.format(root.from_place, root.to_place)
                    color: .2, .2, .2, 1
                    font_size: '14dp'
                    size_hint_y: .5
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
    CheckBox:
        active: root.active
        group: 'guides'
        size_hint_x: None
        width: self.height
        color: .2, .2, .2, 1

<GuidesMenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        spacing: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        TitleBar:
            title: 'Guides'
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: '8dp'
                padding: '4dp'
                BoxLayout:
                    id: container
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    size_hint_y: None
                    height: '80dp'
                    padding: '8dp'
                    Button:
                        text: 'Import a guide'
                        font_size: '18dp'
                        color: .4, .4, .4, 1
                        background_normal: ''
                        on_release: Factory.LoadGuidePopup().open()
                        canvas:
                            Color:
                                rgba: .4, .4, .4, 1
                            Line:
                                width: 1
                                rectangle: self.x, self.y, self.width, self.height
