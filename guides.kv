#:kivy 1.11.1

<GuidesMenuItem@BoxLayout>:
    title: 'Guide'
    active: 'normal'
    orientation: 'horizontal'
    size_hint_y: None
    height: '80dp'
    Image:
        source: 'assets/img/guide-color.png'
        size_hint_x: None
        width: self.height
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.title
            color: .2, .2, .2, 1
            font_size: '18dp'
            bold: True
            size_hint_y: .5
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        Label:
            text: 'From Country 1 to Country 2'
            color: .2, .2, .2, 1
            font_size: '14dp'
            size_hint_y: .5
            text_size: self.size
            halign: 'left'
            valign: 'middle'
    CheckBox:
        active: root.active
        group: 'guides'
        size_hint_x: None
        width: self.height
        color: .2, .2, .2, 1

<GuidesMenuScreen@Screen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        spacing: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        TitleBar:
            title: 'Guides'
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: '8dp'
                padding: '4dp'
                GuidesMenuItem:
                    title: 'Guide 1'
                    active: 'down'
                GuidesMenuItem:
                    title: 'Guide 2'
                GuidesMenuItem:
                    title: 'Guide 3'
                GuidesMenuItem:
                    title: 'Guide 4'
                GuidesMenuItem:
                    title: 'Guide 5'
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    size_hint_y: None
                    height: '80dp'
                    Button:
                        text: 'Import new guide'
                        font_size: '18dp'
                        size_hint: None, None
                        size: self.texture_size
                        padding: '24dp', '14dp'
                        color: .4, .4, .4, 1
                        background_normal: ''
                        canvas:
                            Color:
                                rgba: .4, .4, .4, 1
                            Line:
                                width: 1
                                rectangle: self.x, self.y, self.width, self.height
