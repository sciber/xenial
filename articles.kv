#:kivy 1.11.1

<ArticlesMenuItem@Button>:
    title: ''
    synopsis: ''
    size_hint_y: None
    height: '80dp'
    background_normal: ''
    on_release: app.root.ids.manager.current = 'article'
    BoxLayout:
        orientation: 'horizontal'
        pos: self.parent.pos
        size_hint: None, None
        size: self.parent.size
        Image:
            source: 'assets/img/article-color.png'
            size_hint_x: None
            width: self.height
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: root.title
                color: .2, .2, .2, 1
                font_size: '16dp'
                size_hint_y: .4
                text_size: self.size
                halign: 'left'
                valign: 'middle'
            Label:
                text: root.synopsis
                color: .4, .4, .4, 1
                font_size: '14dp'
                size_hint_y: .6
                text_size: self.size
                halign: 'left'
                valign: 'top'

<ArticlesMenuScreen@Screen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        TitleBar:
            title: 'Articles'
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                ArticlesMenuItem:
                    title: 'Article 1 title'
                    synopsis: 'Article 1 synopsis can span over two rows'
                ArticlesMenuItem:
                    title: 'Article 2 title'
                    synopsis: 'Article 2 synopsis can span over two rows'
                ArticlesMenuItem:
                    title: 'Article 3 title'
                    synopsis: 'Article 3 synopsis can span over two rows'
                ArticlesMenuItem:
                    title: 'Article 4 title'
                    synopsis: 'Article 4 synopsis can span over two rows'
                ArticlesMenuItem:
                    title: 'Article 5 title'
                    synopsis: 'Article 5 synopsis can span over two rows'
                ArticlesMenuItem:
                    title: 'Article 6 title'
                    synopsis: 'Article 6 synopsis can span over two rows'
                ArticlesMenuItem:
                    title: 'Article 7 title'
                    synopsis: 'Article 7 synopsis can span over two rows'
                ArticlesMenuItem:
                    title: 'Article 8 title'
                    synopsis: 'Article 8 synopsis can span over two rows'



