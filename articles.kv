#:kivy 1.11.1

<ArticlesMenuItem>:
    id_: None
    icon: None
    title: ''
    synopsis: ''
    size_hint_y: None
    height: '80dp'
    background_normal: ''
    on_release: app.root.show_article_screen(self.id_)
    BoxLayout:
        orientation: 'horizontal'
        pos: self.parent.pos
        size_hint: None, None
        size: self.parent.size
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            size_hint_x: None
            width: self.height
            Image:
                source: root.icon
                size_hint: None, None
                size: '60dp', '60dp'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: root.title
                color: .2, .2, .2, 1
                font_size: '16dp'
                size_hint_y: .4
                text_size: self.size
                halign: 'left'
                valign: 'middle'
            Label:
                text: root.synopsis
                markup: True
                color: .4, .4, .4, 1
                font_size: '14dp'
                size_hint_y: .6
                text_size: self.size
                halign: 'left'
                valign: 'top'

<ArticlesMenuScreen>:
    items_container: container
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        TitleBar:
            title: 'Articles'
        ScrollView:
            BoxLayout:
                id: container
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
