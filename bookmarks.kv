#:kivy 1.11.1

<BookmarksMenuItem@BoxLayout>:
    title: 'Article'
    synopsis: 'Article synopsis'
    orientation: 'horizontal'
    size_hint_y: None
    height: '80dp'
    Button:
        background_normal: ''
        on_release: app.root.ids.manager.current = 'article'
        BoxLayout:
            orientation: 'horizontal'
            pos: self.parent.pos
            size_hint: None, None
            size: self.parent.size
            Image:
                source: 'assets/img/article-color.png'
                size_hint_x: None
                width: self.height
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: root.title
                    color: .2, .2, .2, 1
                    font_size: '16dp'
                    size_hint_y: .4
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                Label:
                    text: root.synopsis
                    color: .4, .4, .4, 1
                    font_size: '14dp'
                    size_hint_y: .6
                    text_size: self.size
                    halign: 'left'
                    valign: 'top'
    Button:
        size_hint_x: None
        width: self.height
        background_normal: ''
        on_release: pass
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            pos: self.parent.pos
            size: self.parent.size
#            canvas:
#                Color:
#                    rgba: .9, .3, .3, 1
#                Line:
#                    width: 1
#                    ellipse: self.x + dp(12), self.y + dp(12), self.width - dp(24), self.height - dp(24)
            Image:
                source: 'assets/img/delete-red.png'
                size_hint: .5, .5


<BookmarksMenuScreen@Screen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        TitleBar:
            title: 'Bookmarks'
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                BookmarksMenuItem:
                    title: 'Article 1 title'
                    synopsis: 'Article 1 synopsis can span over two rows'
                BookmarksMenuItem:
                    title: 'Article 2 title'
                    synopsis: 'Article 2 synopsis can span over two rows'
                BookmarksMenuItem:
                    title: 'Article 3 title'
                    synopsis: 'Article 3 synopsis can span over two rows'
                BookmarksMenuItem:
                    title: 'Article 4 title'
                    synopsis: 'Article 4 synopsis can span over two rows'
                BookmarksMenuItem:
                    title: 'Article 5 title'
                    synopsis: 'Article 5 synopsis can span over two rows'
                BookmarksMenuItem:
                    title: 'Article 6 title'
                    synopsis: 'Article 6 synopsis can span over two rows'
                BookmarksMenuItem:
                    title: 'Article 7 title'
                    synopsis: 'Article 7 synopsis can span over two rows'
                BookmarksMenuItem:
                    title: 'Article 8 title'
                    synopsis: 'Article 8 synopsis can span over two rows'
