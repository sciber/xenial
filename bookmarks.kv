#:kivy 1.11.1

<BookmarksMenuItem>:
    icon: None
    title: 'Article'
    synopsis: 'Article synopsis'
    orientation: 'horizontal'
    size_hint_y: None
    height: '80dp'
    Button:
        background_normal: ''
        on_release: app.root.ids.manager.current = 'article'
        BoxLayout:
            orientation: 'horizontal'
            pos: self.parent.pos
            size_hint: None, None
            size: self.parent.size
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                size_hint_x: None
                width: self.height
                Image:
                    source: root.icon
                    size_hint: None, None
                    size: '60dp', '60dp'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: root.title
                    color: .2, .2, .2, 1
                    font_size: '16dp'
                    size_hint_y: .4
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                Label:
                    text: root.synopsis
                    markup: True
                    color: .4, .4, .4, 1
                    font_size: '14dp'
                    size_hint_y: .6
                    text_size: self.size
                    halign: 'left'
                    valign: 'top'
    Button:
        size_hint_x: None
        width: self.height
        background_normal: ''
        on_release: root.delete_bookmark()
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            pos: self.parent.pos
            size: self.parent.size
            Image:
                source: 'assets/img/delete.png'
                size_hint: .5, .5

<BookmarksMenuScreen>:
    bookmarks_container: container
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        TitleBar:
            title: 'Bookmarks'
        ScrollView:
            BoxLayout:
                id: container
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
