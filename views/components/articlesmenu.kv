#: kivy 1.11.1

<ArticlesMenuItem>:
    article_id: 0
    article_icon: ''
    article_name: ''
    article_title: ''
    article_synopsis: ''
    size_hint_y: None
    height: '120dp'
    background_normal: ''
    on_release: app.root.show_article_screen(self.article_id)
    padding: '4dp', '10dp'
    canvas:
        Color:
            rgba: .5, .5, .5, 1
        Line:
            width: 1
            points: (self.x + dp(12), self.y - dp(7), self.x + self.width - dp(12), self.y - dp(7))
    BoxLayout:
        orientation: 'horizontal'
        pos: self.parent.pos
        size_hint: None, None
        size: self.parent.size
        padding: 0, '8dp'
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            size_hint_x: None
            width: '80dp'
            padding: '8dp'
            Image:
                source: root.article_icon
                size_hint_x: None
                width: '64dp'
                size_hint_y: None
                height: self.width
        BoxLayout:
            orientation: 'vertical'
            padding: '8dp', 0
            spacing: '4dp'
            Label:
                text: root.article_title
                color: .2, .2, .2, 1
                font_size: '16dp'
                size_hint_y: None
                height: '40dp'
                text_size: self.size
                halign: 'left'
                valign: 'top'
            Label:
                text: root.article_synopsis
                markup: True
                color: .4, .4, .4, 1
                font_size: '14dp'
                size_hint_y: None
                height: '60dp'
                text_size: self.size
                halign: 'left'
                valign: 'top'

<ArticlesMenu>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    spacing: '16dp'
