#:kivy 1.11.1

#:import guides guides

<NavigationPanelButton@Button>:
    title: '<undefined>'
    image: 'assets/img/picture.png'
    size_hint_y: None
    height: '60dp'
    background_normal: ''
    background_disabled_normal: ''
    BoxLayout:
        orientation: 'horizontal'
        pos: self.parent.pos
        size_hint: None, None
        size: self.parent.size
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            size_hint_x: None
            width: '50dp'
            padding: '8dp'
            Image:
                source: root.image
                color: (1, 1, 1, 0.3) if root.disabled else (1, 1, 1, 1)
        Label:
            text: root.title
            text_size: self.size
            halign: 'left'
            valign: 'center'
            font_size: '18dp'
            color: .2, .2, .2, 1
            disabled_color: .8, .8, .8, 1

<NavigationPanel@ScrollView>:
    is_active_guide: True
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    StackLayout:
        orientation: 'lr-tb'
        size_hint_y: None
        height: self.minimum_height
        padding: '4dp'
        NavigationPanelButton:
            title: 'Search'
            image: 'assets/img/search.png'
            disabled: not root.is_active_guide
            on_release:
                app.root.show_search_screen()
                app.root.toggle_state()
        NavigationPanelButton:
            title: 'Categories'
            image: 'assets/img/category.png'
            disabled: not root.is_active_guide
            on_release:
                app.root.show_categoriesmenu_screen()
                app.root.toggle_state()
        NavigationPanelButton:
            title: 'Tags'
            image: 'assets/img/tag.png'
            disabled:  not root.is_active_guide
            on_release:
                app.root.show_tagsmenu_screen()
                app.root.toggle_state()
        NavigationPanelButton:
            title: 'Articles'
            image: 'assets/img/article.png'
            disabled: not root.is_active_guide
            on_release:
                app.root.show_articlesmenu_screen()
                app.root.toggle_state()
        NavigationPanelButton:
            title: 'Bookmarks'
            image: 'assets/img/bookmark.png'
            disabled: not root.is_active_guide
            on_release:
                app.root.show_bookmarks_screen()
                app.root.toggle_state()
        NavigationPanelButton:
            title: 'Guides'
            image: 'assets/img/guide.png'
            on_release:
                app.root.show_guidesmenu_screen()
                app.root.toggle_state()
        NavigationPanelButton:
            title: 'Settings'
            image: 'assets/img/settings.png'
            on_release:
                app.root.show_settings_screen()
                app.root.toggle_state()
