#:kivy 1.11.1

<NavigationPanelButton@Button>:
    title: '<undefined>'
    image: 'assets/img/picture.png'
    size_hint_y: None
    height: '60dp'
    background_normal: ''
    background_disabled_normal: ''
    BoxLayout:
        orientation: 'horizontal'
        pos: self.parent.pos
        size_hint: None, None
        size: self.parent.size
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            size_hint_x: None
            width: '50dp'
            padding: '8dp'
            Image:
                source: root.image
                color: (1, 1, 1, 0.3) if root.disabled else (1, 1, 1, 1)
        Label:
            text: root.title
            text_size: self.size
            halign: 'left'
            valign: 'center'
            font_size: '18dp'
            color: .2, .2, .2, 1
            disabled_color: .8, .8, .8, 1

<NavigationPanel>:
    has_active_guide: False
    search_button_title: 'Search'
    categories_button_title: 'Categories'
    articles_button_title: 'Articles'
    bookmarks_button_title: 'Bookmarks'
    tags_button_title: 'Tags'
    guides_button_title: 'Guides'
    settings_button_title: 'Settings'
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    StackLayout:
        orientation: 'lr-tb'
        size_hint_y: None
        height: self.minimum_height
        padding: '4dp'
        NavigationPanelButton:
            title: root.search_button_title
            image: 'assets/img/search.png'
            disabled: not root.has_active_guide
            on_release:
                app.root.show_search_screen()
                app.root.toggle_state()
        NavigationPanelButton:
            title: root.categories_button_title
            image: 'assets/img/category.png'
            disabled: not root.has_active_guide
            on_release:
                app.root.show_categoriesmenu_screen()
                app.root.toggle_state()
        NavigationPanelButton:
            title: root.articles_button_title
            image: 'assets/img/article.png'
            disabled: not root.has_active_guide
            on_release:
                app.root.show_articlesmenu_screen()
                app.root.toggle_state()
        NavigationPanelButton:
            title: root.bookmarks_button_title
            image: 'assets/img/bookmark.png'
            disabled: not root.has_active_guide
            on_release:
                app.root.show_bookmarksmenu_screen()
                app.root.toggle_state()
        NavigationPanelButton:
            title: root.tags_button_title
            image: 'assets/img/tag.png'
            disabled:  not root.has_active_guide
            on_release:
                app.root.show_tagsmenu_screen()
                app.root.toggle_state()
        NavigationPanelButton:
            title: root.guides_button_title
            image: 'assets/img/guide.png'
            on_release:
                app.root.show_guidesmenu_screen()
                app.root.toggle_state()
        NavigationPanelButton:
            title: root.settings_button_title
            image: 'assets/img/settings.png'
            on_release:
                app.root.show_settings_screen()
                app.root.toggle_state()
        NavigationPanelButton:
            title: 'Logs'
            image: 'assets/img/log.png'
            on_release:
                app.root.show_log_screen()
                app.root.toggle_state()
