#:kivy 1.11.1

#:import exit sys.exit

<LeaveAppPrompt>:
    auto_dismiss: False
    title: 'Warning'
    title_color: 8, .2, .2, 1
    separator_color: 8, .2, .2, 1
    size_hint_y: None
    height: '200dp'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Do you want to leave the app?'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '40dp'
            Button:
                text: 'Cancel'
                on_release: root.dismiss()
            Button:
                text: 'Quit'
                on_release: exit(0)
