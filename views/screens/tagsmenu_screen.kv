#:kivy 1.11.1

#:import translator translator.translator

<TagsMenuItem>:
    tag_name: ''
    num_tagged_categories: 0
    num_tagged_articles: 0
    size_hint_y: None
    height: '60dp'
    background_normal: ''
    background_color: 0, .7, .7, 1
    padding: '20dp', '20dp'
    on_release: app.root.show_tag_screen(self.tag_name)
    BoxLayout:
        orientation: 'horizontal'
        pos: self.parent.pos[0] + dp(8), self.parent.pos[1]
        size_hint: None, None
        size: self.parent.size[0] - dp(8), self.parent.size[1]
        Label:
            text: root.tag_name
            font_size: '18dp'
            text_size: self.size
            valign: 'middle'
            color: 1, 1, 1, 1
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'bottom'
            size_hint_x: None
            width: self.height
            padding: '4dp'
            Image:
                source: 'assets/img/category-white.png'
                size_hint_x: None
                width: self.height
                color: 1, 1, 1, .5
            Label:
                visible: root.num_tagged_categories > 0
                size_hint: (.5, .5) if self.visible else (0, 0)
                opacity: 1 if self.visible else 0
                text: str(root.num_tagged_categories)
                font_size: '12dp'
                bold: True
                color: 1, 1, 1, 1
                canvas.before:
                    Color:
                        rgba: 0, .7, .7, 1
                    Ellipse:
                        pos: self.pos
                        size: self.size
                    Color:
                        rgba: 1, 1, 1, 1
                    Line:
                        width: 1
                        ellipse:  self.x, self.y, self.width, self.height
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'bottom'
            size_hint_x: None
            width: self.height
            padding: '4dp'
            Image:
                pos: self.parent.pos
                source: 'assets/img/article-white.png'
                size_hint_x: None
                width: self.height
                color: 1, 1, 1, .5
            Label:
                visible: root.num_tagged_articles > 0
                size_hint: (.5, .5) if self.visible else (0, 0)
                opacity: 1 if self.visible else 0
                text: str(root.num_tagged_articles)
                font_size: '12dp'
                bold: True
                color: 1, 1, 1, 1
                canvas.before:
                    Color:
                        rgba: 0, .7, .7, 1
                    Ellipse:
                        pos: self.pos
                        size: self.size
                    Color:
                        rgba: 1, 1, 1, 1
                    Line:
                        width: 1
                        ellipse:  self.x, self.y, self.width, self.height

<TagsMenuScreen>:
    name: 'tagsmenu'
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        ScreenTitleBar:
            title: translator.translate('Tags', translator.active_lang_code)
        ScrollView:
            BoxLayout:
                id: tagsmenu_widget
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: '4dp'
