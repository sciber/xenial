#:kivy 1.11.1

<CategoriesMenuScreen>:
    name: 'categories'
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
        ScreenTitleBar:
            title: 'Categories'
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            size: self.parent.size
            pos: self.parent.pos
            ScrollView:
                id: categoriesmenu_container
                size_hint_x: None
                width: int(root.width // categoriesmenu_item_width * categoriesmenu_item_width)
