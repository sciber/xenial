#:kivy 1.11.1

#:import translator translator.translator

<CategoriesMenuScreen>:
    name: 'categoriesmenu'
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
        ScreenTitleBar:
            title: translator.translate('Categories', translator.active_lang_code)
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            size: self.parent.size
            pos: self.parent.pos
            ScrollView:
                id: categoriesmenu_container
