#:kivy 1.11.1

<CategoriesMenuScreen>:
    name: 'categoriesmenu'
    screen_title: 'Categories'
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
        ScreenTitleBar:
            title: root.screen_title
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            size: self.parent.size
            pos: self.parent.pos
            ScrollView:
                id: categoriesmenu_container
