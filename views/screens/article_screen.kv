#:kivy 1.11.1

#:import partial functools.partial
#:import translator translator.translator

<ArticleScreen>:
    name: 'article'
    article_icon: ''
    article_name: ''
    article_title: ''
    article_synopsis: ''
    article_related_categories: []
    article_related_articles: []
    article_is_bookmarked: False
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        spacing: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        ScreenTitleBar:
            title: translator.translate('Article', translator.active_lang_code)
            action_disabled: False
            action_image: 'assets/img/bookmark-color.png' if root.article_is_bookmarked else 'assets/img/bookmark.png'
            action_callback: root.toggle_article_bookmark
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: '8dp'
                padding: '4dp'
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '80dp'
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'center'
                        size_hint_x: None
                        width: self.height
                        padding: '8dp'
                        Image:
                            source: root.article_icon
                    Label:
                        text: root.article_title
                        font_size: '24dp'
                        bold: True
                        text_size: self.size
                        valign: 'middle'
                        color: .2, .2, .2, 1
                BoxLayout:
                    id: tagslist_container
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                Label:
                    text: root.article_synopsis
                    markup: True
                    text_size: self.width, None
                    size_hint_y: None
                    height: self.texture_size[1]
                    font_size: '18dp'
                    color: .2, .2, .2, 1
                    on_ref_press: app.root.show_article_screen(args[1])
                BoxLayout:
                    id: articlecontent_container
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '40dp' if root.article_related_categories else 0
                    opacity: 1 if root.article_related_categories else 0
                    Image:
                        pos: self.parent.pos
                        source: 'assets/img/category.png'
                        size_hint_x: None
                        width: self.height
                        color: 1, 1, 1, .5
                    Label:
                        text: translator.translate('Related categories', translator.active_lang_code)
                        font_size: '18dp'
                        bold: True
                        padding: '8dp', '8dp'
                        text_size: self.size
                        halign: 'left'
                        valign: 'middle'
                        color: .6, .6, .6, 1
                BoxLayout:
                    id: categoriesmenu_container
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '40dp' if root.article_related_articles else 0
                    opacity: 1 if root.article_related_articles else 0
                    Image:
                        pos: self.parent.pos
                        source: 'assets/img/article.png'
                        size_hint_x: None
                        width: self.height
                        color: 1, 1, 1, .5
                    Label:
                        text: translator.translate('Related articles', translator.active_lang_code)
                        font_size: '18dp'
                        bold: True
                        padding: '8dp', '8dp'
                        size_hint_y: None
                        height: '40dp'
                        text_size: self.width, self.height
                        halign: 'left'
                        valign: 'middle'
                        color: .6, .6, .6, 1
                BoxLayout:
                    id: articlesmenu_container
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
