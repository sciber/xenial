#:kivy 1.11.1

#:import translator translator.translator

<TagScreen>:
    name: 'tag'
    tag_name: ''
    tagged_categories: []
    tagged_articles: []
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        spacing: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        ScreenTitleBar:
            title: translator.translate('Tag', translator.active_lang_code)
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    size_hint_y: None
                    height: '100dp'
                    Label:
                        text: root.tag_name
                        font_size: '24dp'
                        bold: True
                        size_hint: None, None
                        size: self.texture_size
                        padding: '16dp', '8dp'
                        color: 1, 1, 1, 1
                        canvas.before:
                            Color:
                                rgba: 0, .7, .7, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '40dp' if root.tagged_categories else 0
                    opacity: 1 if root.tagged_categories else 0
                    Image:
                        pos: self.parent.pos
                        source: 'assets/img/category.png'
                        size_hint_x: None
                        width: self.height
                        color: 1, 1, 1, .5
                    Label:
                        text: translator.translate('Tagged categories', translator.active_lang_code)
                        font_size: '18dp'
                        bold: True
                        padding: '8dp', '8dp'
                        text_size: self.width, self.height
                        halign: 'left'
                        valign: 'middle'
                        color: .6, .6, .6, 1
                BoxLayout:
                    id: categoriesmenu_container
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '40dp' if root.tagged_articles else 0
                    opacity: 1 if root.tagged_articles else 0
                    Image:
                        pos: self.parent.pos
                        source: 'assets/img/article.png'
                        size_hint_x: None
                        width: self.height
                        color: 1, 1, 1, .5
                    Label:
                        text: translator.translate('Tagged articles', translator.active_lang_code)
                        font_size: '18dp'
                        bold: True
                        padding: '8dp', '8dp'
                        size_hint_y: None
                        height: '40dp'
                        text_size: self.width, self.height
                        halign: 'left'
                        valign: 'middle'
                        color: .6, .6, .6, 1
                BoxLayout:
                    id: articlesmenu_container
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
