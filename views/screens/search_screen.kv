#:kivy 1.11.1

<SearchScreen>:
    name: 'search'
    screen_title: 'Search'
    search_input_hint_text: 'Search active guide articles'
    no_results_text: 'Your search did not match any articles'
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        ScreenTitleBar:
            title: root.screen_title
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: '4dp'
                spacing: '12dp'
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '50dp'
                    TextInput:
                        hint_text: root. search_input_hint_text
                        font_size: '16dp'
                        padding: '12dp', '12dp', '12dp', '12dp'
                        multiline: False
                    Button:
                        size_hint_x: None
                        width: self.height
                        background_normal: ''
                        Image:
                            source: 'assets/img/search.png'
                            pos: self.parent.pos
                            size: self.parent.size
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: '16dp', 0
                    Label:
                        text: root.no_results_text
                        text_size: self.size
                        size_hint_y: None
                        height: '50dp'
                        font_size: '18dp'
                        color: .4, .4, .4, 1
