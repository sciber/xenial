#:kivy 1.11.1

<LogScreen>:
    name: 'log'
    log_filename: ''
    log_text: ''
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        spacing: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        ScreenTitleBar:
            title: 'Log'
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: '4dp'
                Label:
                    text: root.log_filename
                    font_size: '18dp'
                    bold: True
                    size_hint_y: None
                    height: '60dp'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                    color: .2, .2, .2, 1
                Label:
                    text: root.log_text
                    font_size: '15dp'
                    text_size: self.width, None
                    size_hint_y: None
                    height: self.texture_size[1]
                    color: .2, .2, .2, 1
                    markup: True
