#:kivy 1.11.1

#:import translator translator.translator

<BookmarksMenuItem>:
    article_icon: ''
    article_name: ''
    article_title: ''
    article_synopsis: ''
    orientation: 'horizontal'
    size_hint_y: None
    height: '120dp'
    Button:
        background_normal: ''
        on_release: app.root.show_article_screen(root.article_name)
        BoxLayout:
            orientation: 'horizontal'
            pos: self.parent.pos
            size_hint: None, None
            size: self.parent.size
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                size_hint_x: None
                width: '80dp'
                padding: '8dp', 0
                Image:
                    source:
                        join_path(
                        guides.active_guide_path,
                        'icons',
                        'articles',
                        root.article_icon) if root.article_icon else None
                    size_hint: None, None
                    size: '60dp', '60dp'
            BoxLayout:
                orientation: 'vertical'
                padding: '8dp', 0
                spacing: '4dp'
                Label:
                    text: root.article_title
                    color: .2, .2, .2, 1
                    font_size: '16dp'
                    size_hint_y: .4
                    text_size: self.size
                    halign: 'left'
                    valign: 'bottom'
                Label:
                    text: root.article_synopsis
                    markup: True
                    color: .4, .4, .4, 1
                    font_size: '14dp'
                    size_hint_y: .6
                    text_size: self.size
                    halign: 'left'
                    valign: 'top'
    Button:
        size_hint_x: None
        width: '60dp'
        background_normal: ''
        on_release: app.root.remove_bookmark(root.article_name)
        AnchorLayout:
            id: anchor_layout
            anchor_x: 'center'
            anchor_y: 'center'
            pos: self.parent.pos
            size: self.parent.size
            Image:
                source: 'assets/img/delete.png'
                size_hint: None, None
                size: '50dp', '50dp'

<BookmarksMenuScreen>:
    name: 'bookmarksmenu'
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        ScreenTitleBar:
            title: translator.translate('Bookmarks', translator.active_lang_code)
        ScrollView:
            BoxLayout:
                id: bookmarksmenu_widget
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: '4dp'
