#:kivy 1.11.1

<CategoryScreen>:
    name: 'category'
    category_icon: ''
    category_name: ''
    category_description: ''
    category_related_categories: []
    category_articles: []
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        spacing: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        ScreenTitleBar:
            title: 'Category'
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: '8dp'
                padding: '4dp'
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '80dp'
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'center'
                        size_hint_x: None
                        width: self.height
                        padding: '8dp'
                        Image:
                            source: root.category_icon
                    Label:
                        text: root.category_name
                        font_size: '24dp'
                        bold: True
                        text_size: self.size
                        valign: 'middle'
                        color: .2, .2, .2, 1
                BoxLayout:
                    id: tagslist_container
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                Label:
                    text: root.category_description
                    markup: True
                    text_size: self.width, None
                    size_hint_y: None
                    height: self.texture_size[1]
                    font_size: '18dp'
                    color: .2, .2, .2, 1
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '40dp' if root.category_related_categories else 0
                    opacity: 1 if root.category_related_categories else 0
                    Image:
                        pos: self.parent.pos
                        source: 'assets/img/category.png'
                        size_hint_x: None
                        width: self.height
                        color: 1, 1, 1, .5
                    Label:
                        text: 'Related categories'
                        font_size: '18dp'
                        bold: True
                        padding: '8dp', '8dp'
                        text_size: self.size
                        halign: 'left'
                        valign: 'middle'
                        color: .6, .6, .6, 1
                BoxLayout:
                    id: categoriesmenu_container
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '40dp' if root.category_articles else 0
                    opacity: 1 if root.category_articles else 0
                    Image:
                        pos: self.parent.pos
                        source: 'assets/img/article.png'
                        size_hint_x: None
                        width: self.height
                        color: 1, 1, 1, .5
                    Label:
                        text: 'Related articles'
                        font_size: '18dp'
                        bold: True
                        padding: '8dp', '8dp'
                        size_hint_y: None
                        height: '40dp'
                        text_size: self.width, self.height
                        halign: 'left'
                        valign: 'middle'
                        color: .6, .6, .6, 1
                BoxLayout:
                    id: articlesmenu_container
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
