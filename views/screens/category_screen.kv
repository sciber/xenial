#:kivy 1.11.1

<CategoryScreen>:
    name: 'category'
    screen_title: 'Category'
    related_categories_subtitle: 'Related categories'
    related_articles_subtitle: 'Related articles'
    category_icon: ''
    category_name: ''
    category_description: ''
    category_has_related_categories: False
    category_has_articles: False
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        spacing: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        ScreenTitleBar:
            title: root.screen_title
        ScrollView:
            id: screen_content_scrollview
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: '8dp'
                padding: '4dp'
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: category_name_label.height if category_name_label.height > dp(100) else '100dp'
                    spacing: '8dp'
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'top'
                        size_hint_x: None
                        width: '80dp'
                        padding: '8dp'
                        Image:
                            source: root.category_icon
                            size_hint_y: None
                            height: self.width
                    Label:
                        id: category_name_label
                        text: root.category_name
                        font_size: '24dp'
                        bold: True
                        text_size: self.width, None
                        height: self.texture_size[1]
                        valign: 'top'
                        color: .2, .2, .2, 1
                BoxLayout:
                    id: tagslist_container
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                BoxLayout:
                    size_hint_y: None
                    height: self.minimum_height
                    padding: 0, '10dp'
                    Label:
                        text: root.category_description
                        markup: True
                        text_size: self.width, None
                        size_hint_y: None
                        height: self.texture_size[1]
                        font_size: '18dp'
                        color: .2, .2, .2, 1
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: '10dp'
                    padding: (0, '10dp') if root.category_has_related_categories else (0, 0)
                    AnchorLayout:
                        anchor_x: 'center'
                        size_hint_y: None
                        height: '40dp' if root.category_has_related_categories else 0
                        opacity: 1 if root.category_has_related_categories else 0
                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint_x: None
                            width: self.minimum_width
                            Image:
                                pos: self.parent.pos
                                source: 'assets/img/category.png'
                                size_hint_x: None
                                width: self.height
                                color: 1, 1, 1, .5
                            Label:
                                text: root.related_categories_subtitle
                                font_size: '20dp'
                                bold: True
                                padding: '8dp', '8dp'
                                size_hint_x: None
                                width: self.texture_size[0]
                                halign: 'left'
                                valign: 'middle'
                                color: .6, .6, .6, 1
                    BoxLayout:
                        id: categoriesmenu_container
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: '10dp'
                    padding: (0, '10dp') if root.category_has_articles else (0, 0)
                    AnchorLayout:
                        anchor_x: 'center'
                        size_hint_y: None
                        height: '40dp' if root.category_has_articles else 0
                        opacity: 1 if root.category_has_articles else 0
                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint_x: None
                            width: self.minimum_width
                            Image:
                                pos: self.parent.pos
                                source: 'assets/img/article.png'
                                size_hint_x: None
                                width: self.height
                                color: 1, 1, 1, .5
                            Label:
                                text: root.related_articles_subtitle
                                font_size: '20dp'
                                bold: True
                                padding: '8dp', '8dp'
                                size_hint_x: None
                                width: self.texture_size[0]
                                halign: 'left'
                                valign: 'middle'
                                color: .6, .6, .6, 1
                    BoxLayout:
                        id: articlesmenu_container
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
