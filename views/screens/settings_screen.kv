#:kivy 1.11.1

#:import tr translator.tr

<LanguageSettingsMenuItem>:
    lang: ('', '')
    orientation: 'horizontal'
    size_hint_y: None
    height: '50dp'
    padding: '16dp', '8dp', '8dp', '8dp'
    Label:
        text: root.lang[0]
        font_size: '18dp'
        text_size: self.width, self.height
        halign: 'left'
        valign: 'middle'
        color: .2, .2, .2, 1
    CheckBox:
        active: root.lang[1] == tr.ui_lang_code
        group: 'app_lang'
        allow_no_selection: False
        size_hint_x: None
        width: '60dp'
        color: 0, .6, .4, 1
        on_state:
            root.change_ui_lang_code(self.active)

<SettingsScreen>:
    name: 'settings'
    screen_title: 'Settings'
    app_lang_subtitle: 'Application language'
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        ScreenTitleBar:
            title: root.screen_title
        ScrollView:
            BoxLayout:
                id: container
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                Label:
                    text: root.app_lang_subtitle
                    font_size: '18dp'
                    bold: True
                    size_hint_y: None
                    height: '60dp'
                    padding: '8dp', '8dp'
                    text_size: self.width, self.height
                    halign: 'left'
                    valign: 'middle'
                    color: .6, .6, .6, 1
