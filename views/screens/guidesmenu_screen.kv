#:kivy 1.11.1

#:import join_path os.path.join
#:import getcwd os.getcwd

#:import Factory kivy.factory.Factory

#:import guides models.guides

#:import translator translator.translator

<LoadGuidePopup@Popup>
    auto_dismiss: False
    title: translator.translate('Select guide archive file', translator.active_lang_code)
    title_color: 0, .6, .4, 1
    separator_color: 0, .6, .4, 1
    BoxLayout:
        orientation: 'vertical'
        FileChooserListView:
            id: filechooser
            path: getcwd()
            filters: ['*.tgz']
            dirselect: False
            multiselect: False
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '40dp'
            Button:
                text: translator.translate('Cancel', translator.active_lang_code)
                on_release: root.dismiss()
            Button:
                text: translator.translate('Load', translator.active_lang_code)
                disabled: not filechooser.selection
                on_release:
                    root.dismiss()
                    app.root.load_guide(filechooser.selection)

<GuideLoadFailedWarning>:
    message: ''
    title: translator.translate('Error', translator.active_lang_code)
    auto_dismiss: True
    title_color: .8, .2, .2, 1
    separator_color: .8, .2, .2, 1
    size_hint_y: None
    height: '200dp'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.message
            text_size: self.size
            valign: 'middle'
            halign: 'center'
            markup: True
        Button:
            text: translator.translate('OK', translator.active_lang_code)
            size_hint_y: None
            height: '40dp'
            on_release: root.dismiss()

<GuidesMenuItem>:
    guide_icon: ''
    guide_name: ''
    guide_title: ''
    guide_lang: ('', '')
    guide_from_place: ''
    guide_to_place: ''
    guide_is_active: False
    orientation: 'horizontal'
    size_hint_y: None
    height: '120dp'
    Button:
        background_normal: ''
        on_release: app.root.show_guide_screen(root.guide_name)
        BoxLayout:
            orientation: 'horizontal'
            pos: self.parent.pos
            size_hint: None, None
            size: self.parent.size
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'bottom'
                size_hint_x: None
                width: self.height
                padding: '10dp'
                Image:
                    source:
                        join_path(
                        app.GUIDES_DIR,
                        root.guide_name,
                        'icons',
                        'guide',
                        root.guide_icon) if root.guide_name and root.guide_icon else None
                    size_hint_x: None
                    width: self.height
                Label:
                    size_hint: (.5, .5)
                    text: root.guide_lang[1].upper()
                    font_size: '12dp'
                    bold: True
                    color: .4, .4, .4, 1
                    canvas.before:
                        Color:
                            rgba: .9, .9, .9, 1
                        Ellipse:
                            pos: self.pos
                            size: self.size
                        Color:
                            rgba: .8, .8, .8, .4
                        Line:
                            width: 2
                            ellipse: self.x + 1, self.y + 1, self.width - 2, self.height - 2

            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: root.guide_title
                    color: .2, .2, .2, 1
                    font_size: '16dp'
                    bold: True
                    size_hint_y: .6
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: .4
                    spacing: '4dp'
                    Label:
                        text:
                            (translator.translate('From', translator.active_lang_code) + ': [b]{}[/b]'
                            ).format(root.guide_from_place)
                        markup: True
                        color: .4, .4, .4, 1
                        font_size: '14dp'
                        text_size: self.size
                        halign: 'left'
                        valign: 'top'
                    Label:
                        text:
                            (translator.translate('To', translator.active_lang_code) + ': [b]{}[/b]'
                            ).format(root.guide_to_place)
                        markup: True
                        color: .4, .4, .4, 1
                        font_size: '14dp'
                        text_size: self.size
                        halign: 'left'
                        valign: 'top'
    CheckBox:
        active: root.guide_is_active
        group: 'guides'
        allow_no_selection: False
        size_hint_x: None
        width: '60dp'
        color: 0, .6, .4, 1
        on_state: root.activate_guide() if self.active else None

<GuidesMenuScreen>:
    name: 'guidesmenu'
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        ScreenTitleBar:
            title: translator.translate('Guides', translator.active_lang_code)
        ScrollView:
            BoxLayout:
                id: guidesmenu
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: '4dp'
        Button:
            text: translator.translate('Import guide', translator.active_lang_code)
            font_size: '18dp'
            background_normal: ''
            background_color: 0, .6, .4, 1
            size_hint_y: None
            height: '60dp'
            on_release: Factory.LoadGuidePopup().open()
