#:kivy 1.11.1

<CategoriesMenuItem>:
    id_: None
    icon: None
    name: ''
    background_normal: ''
    size_hint_y: None
    height: '160dp'
    on_release: app.root.show_category_screen(self.id_)
    BoxLayout:
        orientation: 'vertical'
        pos: self.parent.pos
        size_hint: None, None
        size: self.parent.size
        padding: '4dp'
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            size_hint_y: .6
            Image:
                source: root.icon
                size_hint: None, None
                size: '60dp', '60dp'
        Label:
            text: root.name
            color: .2, .2, .2, 1
            font_size: '16dp'
            size_hint_y: .4
            text_size: self.size
            halign: 'center'
            valign: 'top'

<CategoriesMenuScreen>:
    items_container: container
    BoxLayout:
        orientation: 'vertical'
        padding: '4dp'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        TitleBar:
            title: 'Categories'
        ScrollView:
            GridLayout:
                id: container
                cols: round(root.width // 130) + 1
                size_hint_y: None
                height: self.minimum_height
